<% provide :page_title, "Main" %>
<% currently_at 'Main' %>
<div class="container">
  <h1>Hello^ it's all movies</h1>
  <div class="mb-2">
    <%= form_tag search_path do%>
      <%= label_tag(:q, "Search for:") %>
      <%= text_field_tag :q %>
      <%= submit_tag"Search", class: 'btn-primary' %>
    <% end %>
  </div>
  <% @movie.each do |movie| %>
    <article class="card mb-3">
      <div class="card-body">
        <h4><%= movie.title %></h4>
        <section class="card-text">
          <p class="my-2"><%= movie.body %></p>
        </section>
        <%= link_to "Читать", movie_path(movie), class: 'btn btn-primary' %>
        <% if admin_signed_in? && current_admin.id == 1 %>
          <%= link_to "Редактировать", edit_movie_path(movie),class: 'btn btn-secondary' %>
          <%= link_to "Удалить", movie_path(movie), class: 'btn btn-danger', data: {method: :delete, confirm: "Уверены?"} %>
        <% end %>
      </div>
    </article>
  <% end %>
</div>